@model List<MissionSixAssignment.Models.Movie>
@{
    ViewData["Title"] = "Movie List";
}

<div class="container mt-4">
    <h2>Movie List</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Director</th>
                <th>Year</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>LentTo</th>
                <th>Notes</th>
                <th>CopiedToPlex</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Category?.CategoryName</td>
                    <td>@item.Title</td>
                    <td>@item.Director</td>
                    <td>@item.Year</td>
                    <td>@item.Rating</td>
                    <td>@item.Edited</td>
                    <td>@item.LentTo</td>
                    <td>@item.Notes</td>
                    <td>@item.CopiedToPlex</td>

                    <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@item.MovieId">Edit</a></td>
                    <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.MovieId">Delete</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>
